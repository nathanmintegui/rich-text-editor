<div class="flex flex-col items-center my-28 w-screen h-screen">
  <h1>New Post</h1>
  <div class="flex flex-col items-center justify-center">
    <%= form_with model: @post do |form| %>
      <div class="flex flex-col gap-5 items-center w-screen">
        <div>
          <%= form.label :title %><br>
          <%= form.text_field :title %>
          <% @post.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label :content %><br>
          <div>
          <%= form.rich_text_area :content %><br>
          <% @post.errors.full_messages_for(:content).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <button class="p-2 border rounded" type="submit">
          Create Post
        </button>
        <% end %>
      </div>
  </div>
</div>
